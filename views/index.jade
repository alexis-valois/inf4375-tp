extends layout

block content
  link(rel='stylesheet', href='/stylesheets/style.css')
  script(src='/javascripts/ajax.js')
  h1= title
  h2 Veuillez saisir les dates pour la recherche
  form
    label(for='debut') Date de début
    br
    input(name='debut' type='date')
    br
    label(for='debut') Date de fin
    br
    input(name='fin' type='date')
    br
    button(onclick="replaceTableContent('contrevenants', 'etablissementsInfractions')") Rechercher
  table(border)
    thead
      tr
        th(width="15%") Établissement
        th.number(width="15%") Nombre d'infractions
    tbody#etablissementsInfractions
      tr
        td.nodata(colspan="3") Aucune donnée
